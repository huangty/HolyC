<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="edu.stanford.holyc"
      android:versionCode="1"
      android:versionName="1.0">
    <uses-sdk android:minSdkVersion="3" />
    <permission android:name="android.permission.ACCESS_NETWORK_STATE"></permission>
    <permission android:name="android.permission.CHANGE_NETWORK_STATE"></permission>
    <permission android:name="android.permission.ACCESS_WIFI_STATE"></permission>		
    <permission android:name="android.permission.CHANGE_WIFI_STATE"></permission>	
    <uses-permission android:name="android.permission.INTERNET"/>	    

    <application android:icon="@drawable/icon" android:label="@string/app_name">
        <activity android:name=".entryUI"
                  android:label="@string/app_name"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
                  >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="statusUI"
        		  android:label="@string/report_title"
                  android:configChanges="keyboardHidden|orientation"
                  android:screenOrientation="portrait"
                  android:launchMode="singleTask"
        		  >
        	<intent-filter>
                <!-- <action android:name="android.intent.action.MAIN" /> -->
                <!-- <category android:name="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>
		<service android:name=".ofcomm.OFCommService"
        		 android:process=":ofcc" />
        <service android:name=".host.EnvInitService"
        		 android:process=":envInit" />
        <service android:name=".host.MonitorService"
        		 android:process=":watchdog" />
    </application>
</manifest>